  "query": "query GetFlights($operator: String!, $boardPoint: String!, $offPoint: String!) { flights(operator: $operator, boardPoint: $boardPoint, offPoint: $offPoint) { flightId operator status departure { airport scheduledTime } arrival { airport scheduledTime } } }",
